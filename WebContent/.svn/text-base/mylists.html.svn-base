<!DOCTYPE html>

<head>
	
	<title>Surprizer</title>
	
    <link rel="stylesheet" type="text/css" href="style.css">

</head>

<body>
	<div id="header">
       <h2 class="logo main">
        SURPRIZER
       </h2>
       <div id="page">My Lists</div>
       <div id="user">
        <span id="username">Paul Weidinger</span>
        <span id="actions"><a href="shared.html">Shared with me</a> &nbsp; 1 list &nbsp; <a href="">Logout</a></span>
       </div>
	</div>
	
	<div id="content">
	   <form id="newList" action="register.do" method="post" accept-charset="utf-8">
	           <input type="text" placeholder="name" name="name" />
	           <button>+ Create New List</button>
	       </form>
	       
	       <div class="list">
	           <span class="numItems">15 Items</span>
	           <h2 class="title">Birthday List</h2>
	           <span class="date">Created 10/19/2012</span>
	           <p class="listActions"><a href="">Edit list</a>&nbsp;<a href="">Share list</a>&nbsp;<a href="">Delete list</a></p>
	           
	             <div class="share"><p>Enter email addresses to share</p>
                            <textarea></textarea>
                            <br />
                            <input class="shareSubmit" type="submit" />
                   </div>       
	       </div>
	       
	     
                     
	       <div class="list">
	           <span class="numItems">12 Items</span>
   	           <h2 class="title">Christmas List</h2>
   	           <span class="date">Created 11/11/2012</span>
   	           <p class="listActions"><a href="">Edit list</a>&nbsp;<a href="">Share list</a>&nbsp;<a href="">Delete list</a></p>
               
               <div class="share"><p>Enter email addresses to share</p>
                           <textarea></textarea>
                           <br />
                           <input class="shareSubmit" type="submit" />
                  </div>
               
   	       </div>
	</div>

    <div id="footer">
        
    </div>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>
       <script type="text/javascript">
           $(document).ready( function() {
               $('.share').hide();
               $(".listActions>a:nth-child(2)").click(function(e) {
                   e.preventDefault();
           	       $(".share", $(this).parent().parent()).slideToggle();
               });
               
               $(".shareSubmit").click(function(e) {
              	       $(this).parent().slideToggle();
              	       });
           })
       </script>
</body>
</html>